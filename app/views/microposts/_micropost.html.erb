<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user">
    <%= link_to micropost.user.name, micropost.user %>
    <% if current_user?(micropost.user) %>
    | <%= link_to "削除", micropost, method: :delete %>
    <% end %>
  </span>
  <span class="content">名前：<%= micropost.name %></span>
  <span class="content">住所：<%= micropost.address %></span>
  <span class="content">料金：<%= micropost.price %>円</span>
  <span class="content">
    サウナ：<%= Micropost.human_attribute_name("sauna.#{micropost.sauna}") %>
  </span>
  <span class="content">評価：<%= micropost.evaluate %></span>
  <span class="content"><%= link_to "地図を表示", micropost %></span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前
  </span>
</li>
