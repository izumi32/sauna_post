<% if logged_in? %>
  <div class="col-md-8">
    <h3>投稿一覧</h3>

    <%= form_tag(root_path, method: :get) do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag '検索' %>
    <% end %>

    <% if @feed_items.any? %>
      <ol class="microposts">
        <%= render @feed_items %>
      </ol>
      <%= will_paginate @feed_items %>
    <% end %>

  </div>
<% else %>
  <h1>サウナシェア</h1>
  <p>ホーム画面</p>
  <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
<% end %>
